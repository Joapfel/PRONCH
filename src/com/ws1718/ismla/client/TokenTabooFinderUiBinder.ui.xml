<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.dom.client">
	<ui:style>
	
	.applicationHeadingContainer {
		padding: 80px 0 80px 0;
		background-color: black;
		width: 100%;
	}
	
	.applicationBodyContainer {
		background-color: black;
	}
	
	.cardContainer{
		width: 100%;
	}
	
	.applicationHeading {
		font-size: 70px;
		color: white;
	}
	
	.inputWrapper {
		width: 100%;
	}
	
	.input {
		border: none;
		width: 100%;
		font-size: 70px;
		border-radius: 5px;
	}
	
	
	
	.applicationNamefooter {
		background-color: black;
	}
	
	.language {
		
	}
	</ui:style>

	<g:HTMLPanel>

		<g:HTMLPanel styleName="{style.applicationHeadingContainer}">
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-2 col-sm-12"></div>
					<div class="col-lg-8 col-md-12 col-sm-12">
						<g:HTMLPanel ui:field="applicationHeading" styleName="{style.applicationHeading}">sounds like <g:Image ui:field="loader"></g:Image></g:HTMLPanel>
						<div class="inputWrapper">
							<g:TextBox styleName="{style.input}" ui:field="inputBox"></g:TextBox>
						</div>
					</div>
					<div class="col-lg-2 col-sm-12"></div>
				</div>
			</div>
		</g:HTMLPanel>


		<g:HTMLPanel ui:field="applicationBody" styleName="{style.applicationBodyContainer}">
			<div class="container-fluid">
				<g:HTMLPanel ui:field="cardContainer" styleName="{style.cardContainer}"></g:HTMLPanel>
			</div>
		</g:HTMLPanel>
			
	</g:HTMLPanel>

</ui:UiBinder> 